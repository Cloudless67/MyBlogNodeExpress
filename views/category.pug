extends layout

block post
  div
    header
      h1.BodyTitle= selectedCategory
    nav
      each post in posts
        .list
          a(href=`/post/${post.id}`)
            h2=post.title
            if(session.nickname)
              small=`조회 ${post.views} | 댓글 ${post.replies}`
            p.text-gray.m0=post.body.substring(0, Math.min(post.body.indexOf('#') > 0 ? post.body.indexOf('#') : 200, 200))